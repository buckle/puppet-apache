# file managed by puppet
<Location /<%= name %>>
  AuthName "Private Area"
  AuthType Basic
  AuthBasicProvider file
  AuthUserFile <%= local_authUserFile %>
  require <%= local_users %>
<% if ro_users -%>
  <Limit <%= limits %>>
    require user <%= ro_users %>
  </Limit>
<% end -%>
<% if allow_anonymous -%>
  <Limit GET OPTIONS PROPFIND>
    Satisfy Any
  </Limit>
<% end -%>
</Location>
